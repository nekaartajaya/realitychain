{
  "name": "root",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "yarn build && yarn workspace @realitychain/api setConstant && lerna bootstrap",
    "bootstrap:all": "yarn && yarn bootstrap",
    "build:all": "lerna run build",
    "build": "lerna run build --scope=@realitychain/{erc20,api,webapp,mvp,rest}",
    "init:testnet": "yarn workspace @realitychain/nft-parcels init:testnet && yarn workspace @realitychain/nft-vouchers init:testnet",
    "deploy:testnet": "yarn workspace @realitychain/nft-parcels deploy:testnet && yarn workspace @realitychain/nft-vouchers deploy:testnet && yarn workspace @realitychain/api setConstant",
    "clear:testnet": "rm -rf ./packages/realitychain-contracts/nft-parcels/neardev && rm -rf ./packages/realitychain-contracts/nft-vouchers/neardev",
    "reset:testnet": "yarn clear:testnet && yarn deploy:testnet && yarn init:testnet",
    "prepare:all": "lerna run prepare",
    "prepare": "lerna run prepare --scope=@realitychain/{erc20,api,webapp,mvp,rest}",
    "lint:all": "lerna run --parallel lint --scope=@realitychain/{nft-parcels,erc20,api,nft-vouchers}",
    "lint": "lerna run --parallel lint --scope=@realitychain/{erc20,rest}",
    "format:all": "lerna run --parallel format",
    "format": "lerna run --parallel format --scope=@realitychain/{erc20,api,webapp,mvp,rest}",
    "test": "lerna run --parallel test --scope=@realitychain/{erc20}",
    "test:all": "lerna run --parallel test --scope=@realitychain/{nft-parcels,erc20,nft-vouchers}",
    "start:frontend:dev": "yarn bootstrap && yarn workspace @realitychain/webapp start",
    "start:backend:dev": "yarn bootstrap && yarn workspace @realitychain/rest start:dev",
    "start:backend:staging": "yarn bootstrap && pm2 start rc-backend",
    "stop:backend:staging": "pm2 stop rc-backend",
    "start:backend:prod": "yarn bootstrap && pm2 start rc-backend-prod",
    "stop:backend:prod": "pm2 stop rc-backend-prod",
    "start:mvp": "yarn bootstrap && yarn workspace @realitychain/mvp start"
  },
  "resolutions": {
    "**/ethers": "^5.6.8",
    "**/@ethersproject/contracts": "^5.6.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "hardhat": "^2.9.6",
    "husky": "^8.0.1",
    "lerna": "^5.1.4",
    "ts-node": "^10.8.2"
  },
  "workspaces": [
    "packages/*",
    "packages/realitychain-contracts/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint",
      "yarn format"
    ]
  }
}
